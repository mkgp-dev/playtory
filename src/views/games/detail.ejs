<section>
    <div class="flex items-center justify-center min-h-[80vh]">
        <div class="w-full max-w-lg space-y-4">
            <% if (typeof msgError !=="undefined" && msgError) { %>
                <div role="alert" class="alert alert-error">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>
                        <%= msgError %>
                    </span>
                </div>
                <% } %>
                    <% if (typeof game !=="undefined" && game) { %>
                        <div class="bg-neutral shadow-lg">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Title</th>
                                        <td>
                                            <%= game.title %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Genre</th>
                                        <td>
                                            <%= game.genre_name %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Platform</th>
                                        <td>
                                            <%= game.platform %>
                                        </td>
                                    </tr>
                                    <% if (game.release_year) { %>
                                        <tr>
                                            <th>Year released</th>
                                            <td>
                                                <%= game.release_year %>
                                            </td>
                                        </tr>
                                        <% } %>
                                            <% if (game.developer_name) { %>
                                                <tr>
                                                    <th>Developer</th>
                                                    <td>
                                                        <%= game.developer_name %>
                                                    </td>
                                                </tr>
                                                <% } %>
                                                    <% if (game.status) { %>
                                                        <tr>
                                                            <th>Status</th>
                                                            <td>
                                                                <%= game.status %>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                            <% if (typeof game.price_paid !=="undefined" &&
                                                                game.price_paid !==null) { %>
                                                                <tr>
                                                                    <th>Price</th>
                                                                    <td>
                                                                        $<%= game.price_paid %>
                                                                    </td>
                                                                </tr>
                                                                <% } %>
                                                                    <tr>
                                                                        <th>Description</th>
                                                                        <td>
                                                                            <%= game.description
                                                                                || "No description added yet." %>
                                                                        </td>
                                                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="flex items-center justify-between gap-2">
                            <a href="/games/<%= game.id %>/edit" class="btn btn-primary font-normal">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke-width="1.5" stroke="currentColor" class="size-4">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                                </svg>

                                Modify this content
                            </a>

                            <button class="btn btn-error font-normal" onclick="deleteModal.showModal()">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke-width="1.5" stroke="currentColor" class="size-4">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                </svg>

                                Delete
                            </button>
                        </div>
        </div>
    </div>

    <dialog id="deleteModal" class="modal">
        <div class="modal-box space-y-2">
            <h3 class="text-lg font-bold">Password protected</h3>
            <form action="/games/<%= game.id %>/delete" method="POST" class="space-y-2">
                <input type="password" name="secret_password" placeholder="What is the secret password?"
                    class="input outline-none w-full" required />
                <button type="submit" class="btn btn-primary font-normal">Submit</button>
            </form>
        </div>
        <form method="dialog" class="modal-backdrop">
            <button class="cursor-default"></button>
        </form>
    </dialog>
    <% } %>
</section>